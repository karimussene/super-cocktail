<h1><%= @cocktail.name %></h1>

<%= link_to '< List', cocktails_path %>

<h3>List of ingredients:</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: 'Are you sure you want to delete this dose?' } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-primary' %>